{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "diagnostics": true,
    "declaration": false,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [ "ES5", "ES6", "ES7", "DOM" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./lib/",
    "strictNullChecks": true,
    "sourceMap": false,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@website/*": [ "./*" ],
    },
    "types": [
      "react",
      "paramorph"
    ]
  },
  "include": [
    "_includes/**/*.tsx"
  ],
  "exclude": [
  ]
}

